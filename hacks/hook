import me.system.mouse;
import me.system.keyboard;
import me.system.connection;
import me.system.movementConverter;
import me.system.screenPosit;

import cod.blackops2.*;

public participle class hook{
	public function mouse[move; click; deselect;](blackops2.getenemy){
		function mouseClick == define.Click;
		function mouseMove == define.Move;
		function mouseDeselect == define.Deselect;
	}
	
	private function mouseClick(this.import cod; additional info i;){
		me.system.mouse(system[callFunction.click])
		if !cod or !i {
			callSystem(msg["no hook enabled"]);
		}
		if cod or i {
			transform[cod or i; into != system.Commands or system.Movement];
		}
	}
	
	private function mouseMove{}
	
	private function mouseDeselect{}
}